{%- style -%}
  .sazonais-hero {
    padding: 48px 0;
    background: #f76b1c linear-gradient(180deg, rgba(0, 0, 0, 0) 50%, rgba(247, 107, 28, 0.08) 100%);
    color: #fff;
  }

  .sazonais-hero__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 28px;
    align-items: center;
  }

  .sazonais-hero__heading {
    font-size: 32px;
    line-height: 120%;
    margin: 0 0 14px;
  }

  .sazonais-hero__text {
    margin: 0 0 18px;
    color: #ffeedd;
    line-height: 150%;
    font-size: 16px;
  }

  .sazonais-hero__cta {
    display: inline-flex;
    align-items: center;
    gap: 10px;
  }

  .sazonais-hero__media {
    justify-self: center;
    background: #fff;
    padding: 16px;
    border-radius: 16px;
    box-shadow: 0 10px 24px rgba(0, 0, 0, 0.12);
  }

  .sazonais-hero__media img {
    display: block;
    max-width: 100%;
    height: auto;
    border-radius: 12px;
  }

  @media (max-width: 749px) {
    .sazonais-hero {
      padding: 40px 0;
    }

    .sazonais-hero__heading {
      font-size: 26px;
    }
  }
{%- endstyle -%}

<section class="sazonais-hero">
  <div class="page-width sazonais-hero__grid">
    <div class="sazonais-hero__content">
      {% if section.settings.kicker != blank %}
        <p class="home-usps__text" style="margin:0 0 8px;color:#ffeedd;font-weight:600;letter-spacing:0.4px;">{{ section.settings.kicker }}</p>
      {% endif %}
      <h1 class="sazonais-hero__heading">{{ section.settings.heading | default: page.title | escape }}</h1>
      {% if section.settings.text != blank %}
        <p class="sazonais-hero__text">{{ section.settings.text }}</p>
      {% endif %}
      <div class="sazonais-hero__cta">
        {% if section.settings.button_label != blank and section.settings.button_link != blank %}
          <a class="gb-btn" href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
        {% endif %}
        {% if section.settings.secondary_label != blank and section.settings.secondary_link != blank %}
          <a class="gb-btn gb-btn--ghost" href="{{ section.settings.secondary_link }}">{{ section.settings.secondary_label }}</a>
        {% endif %}
      </div>
    </div>
    {% if section.settings.image != blank %}
      <div class="sazonais-hero__media">
        {{ section.settings.image | image_url: width: 900 | image_tag: loading: 'lazy', alt: section.settings.heading | default: page.title | escape }}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Página Sazonais",
  "settings": [
    {
      "type": "text",
      "id": "kicker",
      "label": "Chamada curta",
      "default": "Novidades sazonais"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Coleções sazonais"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Descrição",
      "default": "Descubra peças e ofertas pensadas para a estação. Atualizamos esta página com seleções temáticas, lançamentos e campanhas especiais."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Texto do botão principal",
      "default": "Ver destaques"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Link do botão principal"
    },
    {
      "type": "text",
      "id": "secondary_label",
      "label": "Texto do botão secundário",
      "default": "Explorar catálogo"
    },
    {
      "type": "url",
      "id": "secondary_link",
      "label": "Link do botão secundário"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagem destacada"
    }
  ],
  "presets": [
    {
      "name": "Página Sazonais"
    }
  ]
}
{% endschema %}
