<section class="home-hero">
  <div class="home-hero__media">
    <img src="{{ '59bcd607a4d8563b6bd627cf6bbd65c6344f1ef3.jpg' | asset_url }}" alt="Imagem de destaque" loading="lazy" style="width:100%;height:100%;object-fit:cover;">
  </div>
  <div class="home-hero__overlay"></div>
  <div class="page-width">
    <div class="home-hero__inner">
      <h1 class="home-hero__heading">Tudo para Bricolagem, Ferramentas e Casa - Entregas em 48h</h1>
      <p class="home-hero__text">Mais de 20 000 produtos disponíveis. Pagamentos seguros, assistência técnica e atendimento personalizado.</p>
      <div class="home-hero__actions">
        <a class="gb-btn" href="#">Comprar</a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Home hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagem de fundo"
    },
    {
      "type": "text",
      "id": "kicker",
      "label": "Texto pequeno",
      "default": "new"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Tudo para Bricolagem, Ferramentas e Casa - Entregas em 48h"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subtítulo",
      "default": "Mais de 20 000 produtos disponíveis. Pagamentos seguros, assistência técnica e atendimento personalizado."
    },
    {
      "type": "text",
      "id": "primary_label",
      "label": "Texto do botão principal",
      "default": "Comprar"
    },
    {
      "type": "url",
      "id": "primary_link",
      "label": "Link do botão principal"
    },
    {
      "type": "text",
      "id": "secondary_label",
      "label": "Texto do segundo botão"
    },
    {
      "type": "url",
      "id": "secondary_link",
      "label": "Link do segundo botão"
    }
  ],
  "presets": [
    {
      "name": "Home hero"
    }
  ]
}
{% endschema %}
