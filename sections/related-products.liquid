{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .section-{{ section.id }} .related-products__heading {
    text-align: center;
    font-family: 'Poppins', sans-serif;
    font-weight: 500;
    color: #111;
    margin: 0 auto 12px;
    font-size: 36px;
    line-height: 1;
  }
  .section-{{ section.id }} .related-products__header {
    text-align: center;
    margin: 0 auto;
  }
  .section-{{ section.id }} .related-products__subheading {
    text-align: center;
    font-family: 'Poppins', sans-serif;
    font-weight: 400;
    font-size: 20px;
    line-height: 1;
    color: #222;
    margin: 0 auto 34px;
    max-width: 1080px;
  }
  .section-{{ section.id }} .related-products {
    max-width: 1320px;
    margin: 0 auto;
    text-align: center;
  }
  .section-{{ section.id }} .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    row-gap: 32px;
    column-gap: 28px;
    justify-items: stretch;
    justify-content: center;
    width: 100%;
    margin: 0 auto;
    list-style: none;
    padding: 0;
    border: 0;
  }
  .section-{{ section.id }} .product-grid > li {
    list-style: none; /* Ensure no list marker (dot) */
    margin: 0;
    padding: 0;
    border: 0;
    display: block;
  }
  .section-{{ section.id }} .prod-card-static {
    display: flex;
    flex-direction: column;
    height: 100%;
    border-radius: 28px;
    box-shadow: 0 18px 42px rgba(0,0,0,0.08);
    background: #fff;
    border: 2px solid transparent;
    transition: border-color 0.2s ease, box-shadow 0.2s ease, transform 0.2s ease;
    padding: 24px 24px 28px;
  }
  .section-{{ section.id }} .prod-card-static__image {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 8px;
    min-height: 320px;
  }
  .section-{{ section.id }} .prod-card-static__img {
    width: 100%;
    height: 320px;
    object-fit: contain;
    display: block;
  }
  .section-{{ section.id }} .prod-card-static__image img {
    object-fit: contain;
    max-height: 320px;
    width: 100%;
    display: block;
  }
  .section-{{ section.id }} .prod-card-static__title {
    font-family: 'Poppins', sans-serif;
    font-size: 26px;
    font-weight: 700;
    color: #111;
    line-height: 1.3;
    text-align: center;
    margin: 12px 8px;
  }
  .section-{{ section.id }} .prod-card-static__price {
    color: #f76b1c;
    font-weight: 800;
    font-size: 36px;
    text-align: center;
    margin: 8px 0 18px;
    display: block;
  }
  .section-{{ section.id }} .prod-card-static__btn {
    background: #f76b1c;
    border: none;
    border-radius: 16px;
    min-height: 74px;
    font-weight: 700;
    font-size: 26px;
    color: #fff;
    width: 100%;
    cursor: pointer;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }
  .section-{{ section.id }} .prod-card-static__btn:hover {
    filter: brightness(0.95);
  }
  .section-{{ section.id }} .prod-card-static:hover,
  .section-{{ section.id }} .prod-card-static:focus-within {
    border-color: #2e8df7;
    transform: translateY(-2px);
    box-shadow: 0 12px 30px rgba(0,0,0,0.12);
  }
{%- endstyle -%}

{%- liquid
  assign rec_collection = section.settings.collection
  if rec_collection == blank and product and product.collections.first
    assign rec_collection = product.collections.first
  endif
  if rec_collection == blank
    assign rec_collection = collections['all']
  endif

  if rec_collection != blank
    assign rec_products = rec_collection.products | slice: 0, section.settings.products_to_show
  endif
-%}

{%- if rec_products and rec_products.size > 0 -%}
  <div class="color-{{ section.settings.color_scheme }} gradient">
    <div class="related-products page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      <div class="related-products__header" style="text-align: center;">
        <h2 class="related-products__heading inline-richtext {{ section.settings.heading_size }}" style="margin: 0 auto; font-family: Poppins; font-weight: 500; font-style: normal; font-size: 36px; line-height: 100%; letter-spacing: 0%;">
          {{ section.settings.heading }}
        </h2>
        {% if section.settings.subheading != blank %}
          <p class="related-products__subheading" style="font-family: Poppins; font-weight: 400; font-style: normal; font-size: 20px; line-height: 173%; letter-spacing: 0%; text-align: center; margin: 19px;">Na GlobalBrico encontra uma ampla gama de produtos de bricolage,<br /> construção, ferramentas, jardinagem e decoração.</p>
        {% endif %}
      </div>
      <ul class="product-grid" role="list">
        {% assign skip_card_product_styles = false %}
        {% for recommendation in rec_products %}
          {% if recommendation == blank %}
            {% continue %}
          {% endif %}
          <li class="grid__item">
            <div class="prod-card-static" data-price="{{ recommendation.price | money }}">
              <div class="prod-card-static__image">
                {%- assign main_image = recommendation.featured_media
                  | default: recommendation.media.first
                  | default: recommendation.featured_image
                  | default: recommendation.images.first
                -%}
                {%- assign display_image = main_image.preview_image | default: main_image -%}
                {% if display_image %}
                  <img src="{{ display_image | image_url: width: 1200 }}" alt="{{ recommendation.title | escape }}" loading="lazy" style="width:100%;height:320px;object-fit:contain;background:#fff;display:block;">
                {% else %}
                  <div style="width:100%;height:220px;background:#f6f6f6;border-radius:12px;display:flex;align-items:center;justify-content:center;font-weight:600;">
                    {{ recommendation.title | escape }}
                  </div>
                {% endif %}
              </div>
              <h3 class="prod-card-static__title">{{ recommendation.title | escape }}</h3>
              <p class="prod-card-static__price">{{ recommendation.price | money }}</p>
              <a href="{{ recommendation.url }}" class="prod-card-static__btn">Comprar</a>
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
{%- endif -%}

{% schema %}
{
  "name": "Produtos relacionados",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Produtos relacionados",
      "label": "Título"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subtítulo",
      "default": "Na GlobalBrico encontra uma ampla gama de produtos de bricolage, construção, ferramentas, jardinagem e decoração."
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "h2"
        },
        {
          "value": "h1",
          "label": "h1"
        },
        {
          "value": "h0",
          "label": "h0"
        },
        {
          "value": "hxl",
          "label": "hxl"
        },
        {
          "value": "hxxl",
          "label": "hxxl"
        }
      ],
      "default": "h2",
      "label": "Tamanho do título"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 10,
      "step": 1,
      "default": 4,
      "label": "Produtos a mostrar"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Coleção de recomendados",
      "info": "Se vazio, usa a primeira coleção do produto."
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Esquema de cores",
      "default": "scheme-1"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "Adaptável"
        },
        {
          "value": "portrait",
          "label": "Retrato"
        },
        {
          "value": "square",
          "label": "Quadrado"
        }
      ],
      "default": "square",
      "label": "Relação da imagem"
    },
    {
      "type": "checkbox",
      "id": "show_secondary_image",
      "default": true,
      "label": "Mostrar segunda imagem"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "Mostrar fornecedor"
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "default": false,
      "label": "Mostrar avaliação"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 80,
      "step": 4,
      "default": 36,
      "unit": "px",
      "label": "Espaçamento superior"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 80,
      "step": 4,
      "default": 28,
      "unit": "px",
      "label": "Espaçamento inferior"
    }
  ],
  "presets": [
    {
      "name": "Produtos relacionados"
    }
  ]
}
{% endschema %}