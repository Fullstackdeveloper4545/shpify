{%- assign cards = static_cards | split: ',' -%}

<div class="section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="static-grid">
      {%- for entry in cards -%}
        {%- assign parts = entry | strip | split: '|' -%}
        {%- if parts.size == 3 -%}
          <div class="static-card">
            <div class="static-card__img">
              <img src="{{ parts[0] }}" alt="{{ parts[1] | escape }}" loading="lazy">
            </div>
            <div class="static-card__body">
              <h3>{{ parts[1] }}</h3>
              <p class="static-card__price">{{ parts[2] }}</p>
              <a class="static-card__btn" href="#">Comprar</a>
            </div>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</div>

