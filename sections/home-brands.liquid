<section class="home-brands section-space home-brands--default">
  <div class="page-width">
    <div class="home-categories__header">
      <h2 class="home-categories__title">{{ section.settings.heading }}</h2>
    </div>
    <div class="home-brands__row">
      {% for block in section.blocks %}
        <div class="home-brands__item" {{ block.shopify_attributes }}>
          {% if block.settings.logo != blank %}
            {{ block.settings.logo | image_url: width: 220 | image_tag: loading: 'lazy' }}
          {% elsif block.settings.logo_asset != blank %}
            <img src="{{ block.settings.logo_asset | asset_url }}" alt="{{ block.settings.fallback_text | escape }}" loading="lazy">
          {% else %}
            <span class="home-brands__placeholder">{{ block.settings.fallback_text }}</span>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Home marcas",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Marcas"
    }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Marca",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo"
        },
        {
          "type": "text",
          "id": "logo_asset",
          "label": "Nome do ficheiro do logo (ativo do tema)",
          "info": "Ex.: my-logo.png (para usar um ficheiro em assets se não quiser usar o image picker)"
        },
        {
          "type": "text",
          "id": "fallback_text",
          "label": "Texto alternativo",
          "default": "Marca"
        }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "Home marcas",
      "blocks": [
        {
          "type": "brand"
        },
        {
          "type": "brand"
        },
        {
          "type": "brand"
        },
        {
          "type": "brand"
        }
      ]
    }
  ]
}
{% endschema %}
