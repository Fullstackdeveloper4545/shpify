<section class="section-space">
  <div class="page-width">
    <div class="home-banner">
      {% if section.settings.image != blank %}
        {{ section.settings.image | image_url: width: 1800 | image_tag: loading: 'lazy' }}
      {% endif %}
      <div class="home-banner__content">
        <h2>{{ section.settings.heading }}</h2>
        <p>{{ section.settings.subheading }}</p>
        {% if section.settings.button_label != blank %}
          <a class="gb-btn" href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Home faixa destaque",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagem"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Já está pronto para o Outono?"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subtítulo",
      "default": "Produtos essenciais para manter a sua casa confortável e o jardim pronto para a estação."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Texto do botão",
      "default": "Comprar"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Link do botão"
    }
  ],
  "presets": [
    {
      "name": "Home faixa destaque"
    }
  ]
}
{% endschema %}
