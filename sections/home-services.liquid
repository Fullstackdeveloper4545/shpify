<section class="home-services">
  <div class="page-width">
    <div class="home-services__inner">
      <div>
        <h2>{{ section.settings.heading }}</h2>
        <p>{{ section.settings.text }}</p>
      </div>
      <div class="home-services__cards">
        {% for block in section.blocks %}
          <div class="home-services__card" {{ block.shopify_attributes }}>
            {% if block.settings.image != blank %}
              {{ block.settings.image | image_url: width: 800 | image_tag: loading: 'lazy' }}
            {% elsif forloop.first %}
              <img src="{{ '3ad4a2f2854ee16114ba3c780c508e78b59e8578.jpg' | asset_url }}" alt="{{ block.settings.title | default: 'Serviço' }}" loading="lazy" style="width:100%;height:100%;object-fit:cover;">
            {% elsif forloop.index == 2 %}
              <img src="{{ '21ed8db59b5fb7dbe3cc32f5142cd0013801303d.jpg' | asset_url }}" alt="{{ block.settings.title | default: 'Serviço' }}" loading="lazy" style="width:100%;height:100%;object-fit:cover;">
            {% endif %}
            <div class="home-promos__content">
              <div>
                <h4 style="margin:0;">{{ block.settings.title }}</h4>
                <p style="margin:6px 0 0;">{{ block.settings.caption }}</p>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Home serviços",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Serviços"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Texto",
      "default": "Mais do que uma loja de bricolagem online, oferecemos entregas rápidas, pagamentos seguros e apoio técnico especializado."
    }
  ],
  "blocks": [
    {
      "type": "service",
      "name": "Serviço",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagem"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título",
          "default": "Entregas em 48h"
        },
        {
          "type": "textarea",
          "id": "caption",
          "label": "Descrição",
          "default": "Receba as suas encomendas em casa, em todo o Portugal Continental, de forma rápida e segura."
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Home serviços",
      "blocks": [
        {
          "type": "service"
        },
        {
          "type": "service"
        }
      ]
    }
  ]
}
{% endschema %}
