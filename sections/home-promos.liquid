<section class="home-promos section-space">
  <div class="page-width">
    <div class="home-promos__grid">
      {% for block in section.blocks %}
        <div class="home-promos__card" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            {{ block.settings.image | image_url: width: 1200 | image_tag: loading: 'lazy' }}
          {% elsif forloop.first %}
            <img src="{{ '6e23fa198c71c602942f754653e465c414cd7d3d.jpg' | asset_url }}" alt="{{ block.settings.heading | default: 'Promoção' }}" loading="lazy" style="width:100%;height:100%;object-fit:cover;">
          {% elsif forloop.index == 2 %}
            <img src="{{ '18adb5906584fb8739abaaa3296fe782775d26b1.png' | asset_url }}" alt="{{ block.settings.heading | default: 'Promoção' }}" loading="lazy" style="width:100%;height:100%;object-fit:cover;">
          {% elsif forloop.index == 3 %}
            <img src="{{ '3ce8e61c69bb8e153c122e2c8c6fa3aa907e5f26.jpg' | asset_url }}" alt="{{ block.settings.heading | default: 'Promoção' }}" loading="lazy" style="width:100%;height:100%;object-fit:cover;">
          {% else %}
            <div style="background:#ddd;height:100%;width:100%;"></div>
          {% endif %}
          <div class="home-promos__content">
            <div>
              {% if block.settings.heading != blank %}
                <h3>{{ block.settings.heading }}</h3>
              {% endif %}
              {% if block.settings.subheading != blank %}
                <p>{{ block.settings.subheading }}</p>
              {% endif %}
            </div>
            {% if block.settings.button_label != blank %}
              <a class="gb-btn gb-btn--ghost" href="{{ block.settings.button_link }}">{{ block.settings.button_label }}</a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Home promos",
  "blocks": [
    {
      "type": "promo",
      "name": "Promoção",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagem"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Título",
          "default": "Poupe até 40% — não perca os descontos"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Texto",
          "default": "Outlet & Promoções"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Texto do botão",
          "default": "Aproveite já"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Link"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Home promos",
      "blocks": [
        {
          "type": "promo"
        },
        {
          "type": "promo"
        },
        {
          "type": "promo"
        }
      ]
    }
  ]
}
{% endschema %}
