<script>
  (function () {
    const promoModal = document.querySelector('.promo-modal');
    const promoCodeText = document.querySelector('[data-promo-code-text]');
    const promoTriggers = Array.from(document.querySelectorAll('[data-promo-trigger]'));
    const closePromo = () => {
      if (promoModal) promoModal.hidden = true;
    };
    const openPromo = (code) => {
      if (!promoModal || !promoCodeText) return;
      promoCodeText.textContent = code || '';
      promoModal.hidden = false;
    };
    if (promoTriggers.length && promoModal) {
      promoTriggers.forEach((trigger) => {
        trigger.closest('.promo-card')?.addEventListener('click', (event) => {
          event.preventDefault();
          const code = trigger.closest('.promo-card')?.dataset.promoCode;
          openPromo(code);
        });
      });
      promoModal.querySelectorAll('[data-promo-close]').forEach((btn) =>
        btn.addEventListener('click', closePromo)
      );
      document.addEventListener('keydown', (evt) => {
        if (evt.key === 'Escape') closePromo();
      });
    }

    const moneyFormat = {{ shop.money_format | json }};
    const productGrid = document.querySelector('[data-prod-grid]');

    if (!productGrid) return;

    const prodLayout = productGrid.closest('.prod-layout');
    if (!prodLayout) return;

    const filterBlocks = Array.from(prodLayout.querySelectorAll('.prod-filter__block'));
    const mobileFilters = window.matchMedia('(max-width: 990px)');

    const collapseFiltersOnMobile = () => {
      if (!mobileFilters.matches || !filterBlocks.length) return;
      filterBlocks.forEach((block) => {
        if (block.dataset.mobileInit === 'true') return;
        block.removeAttribute('open');
        block.dataset.mobileInit = 'true';
      });
    };

    const expandFiltersOnDesktop = () => {
      if (mobileFilters.matches || !filterBlocks.length) return;
      filterBlocks.forEach((block) => block.setAttribute('open', 'open'));
    };

    collapseFiltersOnMobile();
    expandFiltersOnDesktop();
    mobileFilters.addEventListener('change', () => {
      collapseFiltersOnMobile();
      expandFiltersOnDesktop();
    });

    const loadingState = prodLayout.querySelector('[data-prod-loading]');
    const emptyState = prodLayout.querySelector('[data-prod-empty]');
    const errorState = prodLayout.querySelector('[data-prod-error]');

    const slider = prodLayout.querySelector('[data-prod-price-slider]');
    const minHandle = slider?.querySelector('.prod-price-slider__handle--min');
    const maxHandle = slider?.querySelector('.prod-price-slider__handle--max');
    const rangeFill = slider?.querySelector('.prod-price-slider__range');
    const minDisplay = slider?.querySelector('[data-prod-price-min]');
    const maxDisplay = slider?.querySelector('[data-prod-price-max]');
    const label = prodLayout.querySelector('[data-prod-price-label]');

    const setState = ({ loading = false, error = false, empty = false }) => {
      if (loadingState) loadingState.hidden = !loading;
      if (errorState) errorState.hidden = !error;
      if (emptyState) emptyState.hidden = !empty;
    };

    const formatMoney = (cents) => {
      if (typeof Shopify !== 'undefined' && typeof Shopify.formatMoney === 'function') {
        return Shopify.formatMoney(cents, moneyFormat);
      }
      return `€${(cents / 100).toFixed(2)}`;
    };

    const escapeHTML = (value) => {
      if (typeof value !== 'string') return '';
      return value
        .replace(/&/g, '&amp;')
        .replace(/</g, '&lt;')
        .replace(/>/g, '&gt;')
        .replace(/"/g, '&quot;')
        .replace(/'/g, '&#39;');
    };

    const getPriceCents = (product) => {
      const raw =
        product?.variants?.[0]?.price ??
        product?.price_min ??
        product?.price ??
        product?.variants?.[0]?.price_min;
      const priceNumber = Number.parseFloat(raw);
      if (!Number.isFinite(priceNumber)) return null;
      return Math.round(priceNumber * 100);
    };

    const renderProducts = (products) => {
      if (!products.length) {
        productGrid.innerHTML = '';
        setState({ loading: false, empty: true, error: false });
        if (slider) slider.setAttribute('hidden', 'hidden');
        return;
      }

      const cardsMarkup = products
        .map((product) => {
          const priceCents = getPriceCents(product);
          const hasPrice = Number.isFinite(priceCents);
          const priceDisplay = hasPrice ? formatMoney(priceCents) : 'Preço indisponível';
          const imageSrc = product?.images?.[0]?.src ?? '';
          const productUrl = product?.handle
            ? `${window.Shopify.routes.root}products/${product.handle}`
            : '#';
          const title = escapeHTML(product?.title ?? '');

          return `
            <div class="prod-card-static" data-price="${hasPrice ? priceCents / 100 : ''}">
              <div class="prod-card-static__image">
                ${
                  imageSrc
                    ? `<img src="${imageSrc}" alt="${title}" loading="lazy" style="width:100%;height:220px;object-fit:contain;background:#fff;">`
                    : `<div style="width:100%;height:220px;background:#f2f2f2;display:flex;align-items:center;justify-content:center;">${title}</div>`
                }
              </div>
              <h3 class="prod-card-static__title">${title}</h3>
              <p class="prod-card-static__price">${priceDisplay}</p>
              <a href="${productUrl}" class="prod-card-static__btn">Comprar</a>
            </div>
          `;
        })
        .join('');

      productGrid.innerHTML = cardsMarkup;
      setState({ loading: false, empty: false, error: false });
    };

    const initializePriceFilter = (products) => {
      if (!slider || !minHandle || !maxHandle || !rangeFill) return;

      const prices = products
        .map((product) => getPriceCents(product))
        .filter((value) => Number.isFinite(value))
        .map((value) => value / 100);

      if (!prices.length) {
        slider.setAttribute('hidden', 'hidden');
        return;
      }

      slider.removeAttribute('hidden');

      const minPrice = Math.floor(Math.min(...prices));
      const maxPrice = Math.ceil(Math.max(...prices));

      [minHandle, maxHandle].forEach((handle) => {
        handle.min = minPrice;
        handle.max = maxPrice;
      });

      minHandle.value = minPrice;
      maxHandle.value = maxPrice;

      const format = (value) =>
        value.toLocaleString('pt-PT', { minimumFractionDigits: 0, maximumFractionDigits: 0 });

      const updateUI = () => {
        const minVal = Math.min(Number(minHandle.value), Number(maxHandle.value));
        const maxVal = Math.max(Number(minHandle.value), Number(maxHandle.value));

        minHandle.value = minVal;
        maxHandle.value = maxVal;

        const percentMin = ((minVal - minPrice) / (maxPrice - minPrice)) * 100;
        const percentMax = ((maxVal - minPrice) / (maxPrice - minPrice)) * 100;
        rangeFill.style.left = `${percentMin}%`;
        rangeFill.style.width = `${Math.max(percentMax - percentMin, 0)}%`;

        if (minDisplay) minDisplay.textContent = format(minVal);
        if (maxDisplay) maxDisplay.textContent = format(maxVal);
        if (label) label.textContent = `Preço €${format(minVal)} – €${format(maxVal)}`;
      };

      const applyFilter = () => {
        const minVal = Number(minHandle.value);
        const maxVal = Number(maxHandle.value);

        const productCards = Array.from(productGrid.querySelectorAll('.prod-card-static'));
        productCards.forEach((card) => {
          const price = Number(card.dataset.price);
          const isVisible = price >= minVal && price <= maxVal;
          card.style.display = isVisible ? '' : 'none';
        });
      };

      const handleInput = () => {
        updateUI();
        applyFilter();
      };

      minHandle.oninput = handleInput;
      maxHandle.oninput = handleInput;
      minHandle.onchange = handleInput;
      maxHandle.onchange = handleInput;

      updateUI();
      applyFilter();
    };

    const fetchProducts = async () => {
      const collectionHandle = productGrid.dataset.collectionHandle || 'all';
      const limitRaw = Number(productGrid.dataset.limit);
      const limit = Number.isFinite(limitRaw) ? Math.max(1, Math.min(limitRaw, 250)) : 50;
      const url = `${window.Shopify.routes.root}collections/${collectionHandle}/products.json?limit=${limit}`;

      setState({ loading: true, empty: false, error: false });

      try {
        const response = await fetch(url, { headers: { Accept: 'application/json' } });
        if (!response.ok) throw new Error('Resposta inválida ao carregar produtos.');

        const data = await response.json();
        const products = Array.isArray(data?.products) ? data.products : [];

        renderProducts(products);
        initializePriceFilter(products);
      } catch (error) {
        console.error('Falha ao carregar produtos', error);
        setState({ loading: false, empty: false, error: true });
      }
    };

    fetchProducts();
  })();
</script>

