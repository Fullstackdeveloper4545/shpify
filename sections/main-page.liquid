{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% if page.handle == 'promocoes' or template.suffix == 'promocoes' %}
  {%- assign promo_collection = section.settings.promo_collection -%}
  {%- if promo_collection == blank -%}
    {%- assign promo_collection = collections['promocoes'] -%}
  {%- endif -%}

  <section class="home-hero home-hero--promocoes">
    <div class="home-hero__media">
      <img
        src="{{ '18ee5a4b0ae907b593da3310ef7b1da84a224511.jpg' | asset_url }}"
        alt="{{ page.title | default: 'Promoções' | escape }}"
        loading="lazy"
        style="width:100%;height:100%;object-fit:cover;"
      >
    </div>
    <div class="home-hero__overlay"></div>
    <div class="page-width">
      <div class="home-hero__inner" style="text-align:center;margin:0 auto;width:100%;max-width:1100px;display:flex;flex-direction:column;align-items:center;justify-content:center;height:100%;padding:48px 48px;">
        <h1
          class="home-hero__heading"
          style="font-family:Poppins;font-weight:600;font-size:36px;line-height:140%;letter-spacing:0;text-align:center;padding:12px 16px;margin:-91px 168px;"
        >
          Grandes descontos em bricolage, <br /> construção e jardim!
        </h1>
        <p
          class="home-hero__text"
          style="font-family:Poppins;font-weight:500;font-size:20px;line-height:135%;letter-spacing:0;text-align:center;padding:12px 2px;margin:20px 308px;"
        >
          Aqui encontra as melhores promoções em ferramentas,<br />
          materiais de construção, tintas, iluminação, eletricidade e <br />
          jardinagem, com descontos exclusivos e tempo limitado.
        </p>
      </div>
    </div>
  </section>

  <section class="promo-grid section-space">
    <div class="page-width">
      <div class="promo-grid__inner">
        {%- if promo_collection != blank and promo_collection.products_count > 0 -%}
          {%- for product in promo_collection.products -%}
            {%- assign bg_url = '' -%}
            {%- if product.featured_media -%}
              {%- assign bg_url = product.featured_media | image_url: width: 1400 -%}
            {%- elsif product.images.first -%}
              {%- assign bg_url = product.images.first | image_url: width: 1400 -%}
            {%- endif -%}
            {%- assign promo_code_raw = product.metafields.custom.promo_code | default: '' -%}
            {%- assign promo_code_clean = promo_code_raw | strip -%}
            {%- assign promo_code_display = promo_code_clean | escape -%}
            {%- capture promo_bg -%}
              background-image: linear-gradient(180deg, rgba(247, 107, 28, 0.6), rgba(247, 107, 28, 0.85)){% unless bg_url == '' %}, url('{{ bg_url }}'){% endunless %};
            {%- endcapture -%}
            <a
              class="promo-card{% if bg_url == '' %} promo-card--no-image{% endif %}"
              href="{{ product.url }}"
              data-promo-code="{{ promo_code_display }}"
              style="{{ promo_bg | strip }}"
            >
              <div class="promo-card__content">
                <h3>{{ product.title | escape }}</h3>
                {%- if promo_code_clean != blank and promo_code_clean != product.title -%}
                  <p>{{ promo_code_display }}</p>
                {%- endif -%}
                <span class="promo-card__cta" data-promo-trigger>Aproveite já</span>
              </div>
            </a>
          {%- endfor -%}
        {%- else -%}
          {%- assign fallback_cards = 'Poupe até 40% — não perca os descontos|Outlet & Promoções|6e23fa198c71c602942f754653e465c414cd7d3d.jpg|PROMO40,20% em corta relvas marca VITO|Aproveite já|18adb5906584fb8739abaaa3296fe782775d26b1.png|VITO20,10% na marca Dewalt|Aproveite já|3ce8e61c69bb8e153c122e2c8c6fa3aa907e5f26.jpg|DEWALT10' | split: ',' -%}
          {%- for entry in fallback_cards -%}
            {%- assign parts = entry | split: '|' -%}
            {%- assign heading = parts[0] -%}
            {%- assign subheading = parts[1] -%}
            {%- assign fallback_image = parts[2] -%}
            {%- assign promo_code = parts[3] -%}
            <a
              class="promo-card"
              href="#"
              data-promo-code="{{ promo_code }}"
              style="background-image: linear-gradient(180deg, rgba(247, 107, 28, 0.6), rgba(247, 107, 28, 0.85)), url('{{ fallback_image | asset_url }}');"
            >
              <div class="promo-card__content">
                <h3>{{ heading }}</h3>
                {%- if subheading != blank and subheading != 'Aproveite já' -%}
                  <p>{{ subheading }}</p>
                {%- endif -%}
                <span class="promo-card__cta" data-promo-trigger>Aproveite já</span>
              </div>
            </a>
          {%- endfor -%}
        {%- endif -%}
      </div>
    </div>
  </section>

